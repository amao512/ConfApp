<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ConfApp" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="SplashScreenTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/bg_splash_screen</item>
    </style>
    
    <style name="ProgressBarTheme">
        <item name="colorAccent">@color/colorPrimary</item>
    </style>

    <style name="FavoriteButtonTheme">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_gravity">bottom|center</item>
        <item name="android:layout_marginBottom">@dimen/bottom_button_margin_bottom</item>
        <item name="android:background">@drawable/bg_favourite_button</item>
        <item name="android:drawableStart">@drawable/ic_favourite_border</item>
        <item name="android:drawablePadding">@dimen/drawable_padding</item>
        <item name="android:paddingTop">@dimen/padding_size_10x</item>
        <item name="android:paddingBottom">@dimen/padding_size_10x</item>
        <item name="android:paddingStart">@dimen/padding_size_16x</item>
        <item name="android:paddingEnd">@dimen/padding_size_16x</item>
        <item name="textAllCaps">false</item>
        <item name="android:text">@string/favourite_btn_text</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">@dimen/button_text_size_medium</item>
    </style>

    <style name="ToolbarTheme">
        <item name="android:layout_height">@dimen/toolbar_height</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@drawable/toolbar_title</item>
    </style>

    <style name="FailLoadingTheme">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textColor">@color/event_completed_color</item>
        <item name="android:textSize">@dimen/text_size_16x</item>
    </style>

    <style name="EventStateTheme">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:paddingStart">@dimen/padding_size_4x</item>
        <item name="android:paddingEnd">@dimen/padding_size_4x</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_size_13x</item>
        <item name="android:visibility">gone</item>
    </style>
</resources>